<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="red">#ee3651</color>
    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:background">#FF4500</item> <!-- Orange background -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textSize">18sp</item> <!-- Text size -->
        <item name="android:padding">16dp</item> <!-- Padding inside the button -->
        <item name="android:buttonCornerRadius">12dp</item> <!-- Rounded corners -->
    </style>



        <!-- Define custom style for TextView -->
        <style name="CustomTextStyle">
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#000000</item> <!-- Black text -->
            <item name="android:fontFamily">sans-serif</item> <!-- Set font family -->
            <item name="android:textStyle">bold</item> <!-- Make the text bold -->
        </style>


</resources>